<Window x:Class="ChackPoint_tst_No1.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChackPoint_tst_No1"
        mc:Ignorable="d"
        Title="Lobby" Height="450" Width="800"  WindowStyle="None">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Fotoram.io.png"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" Margin="0,73,0,0" TextWrapping="Wrap" Text="CanvasFuckAway" VerticalAlignment="Top" FontSize="50"/>
        <Button Content="New Game" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="45" Click="Button_Click"/>
        <Button Content="Game Rule" HorizontalAlignment="Center" Margin="0,279,0,0" VerticalAlignment="Top" FontSize="45" Click="Button_Click_1"/>
        <Button x:Name="close" Content="close" HorizontalAlignment="Left" Margin="750,10,0,0" VerticalAlignment="Top" Click="close_Click"/>
        <Button x:Name="git_link" Content="Button" HorizontalAlignment="Left" Margin="350,348,0,0" VerticalAlignment="Top" Height="70" Width="70" Click="git_link_Click">
            <Button.Background>
                <ImageBrush ImageSource="/github-logo (1).png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
